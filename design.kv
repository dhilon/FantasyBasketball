#:kivy 1.0
<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            Label:
                text: "User Login"
            TextInput:
                id: username
                hint_text: "Username"
            TextInput:
                id: password
                hint_text: "Password"
            Button:
                text: "Login"
                on_press: root.log_in(root.ids.username.text, root.ids.password.text)
            Label:
                id: incorrect
                text: ""
        GridLayout:
            cols: 2
            Button:
                text: "Forgot Password?"
            Button:
                text: "Sign Up"
                on_press: root.sign_up()
        
<SignUpScreen>:
    GridLayout:
        cols: 1
        Label:
            text: "Play a different kind of fantasy basketball using all-time greats!"
        Label:
            id: already
            text: ""
        TextInput:
            id: username
            hint_text: "Username"
        TextInput:
            id: password
            hint_text: "Password"
        Button:
            text: "Submit"
            on_press: root.add_user(root.ids.username.text, root.ids.password.text)
<SignUpScreenSuccess>:
    GridLayout:
        cols: 1
        Label:
            text: "Sign-up successful!"
        Button:
            text: "Login Page"
            on_press: root.gotologin()
<LoginScreenSuccess>:
    GridLayout:
        cols: 1
        Button:
            text: "Log out"
            on_press: root.log_out()
        Button:
            text: "Create Game"
            on_press: root.create_new_game()
        Button:
            text: "Choose private game"
            on_press: root.choose_private()
        Button:
            text: "Join public game"
            on_press: root.join_public()
<CreateNewGame>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            Button:
                text: "Back"
                on_press: root.login_screen_success()
            Label:
                id: good_create
                text: ""
        GridLayout:
            cols: 2
            Label:
                text: "Name of Draft:"
            TextInput:
                id: NameOfDraft
            Label:
                text: "Time until draft starts (in minutes):"
            TextInput:
                id: TimeTillDraft
            Button:
                text: "Create Public Game"
                on_press: root.create_public(root.ids.NameOfDraft.text, root.ids.TimeTillDraft.text, "public")
            Button:
                text: "Create private game"
                on_press: root.create_private(root.ids.NameOfDraft.text, root.ids.TimeTillDraft.text, "private")
<ChoosePrivateGame>:
    on_enter: (root.display_games())
    on_enter: (root.display_owners())
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            Button:
                text: "Back"
                on_press: root.go_back()
            Label:
                id: games_private
                text: ""
            Label:
                id: owners_private
                text: ""
        GridLayout:
            cols: 2
            Label:
                text: "Enter the name of the game you would like to join here:"
            TextInput:
                id: nameOfTheChosen
            Button:
                text: "Continue to game"
                on_press: root.chosen_private(root.ids.nameOfTheChosen.text)
            Label:
                id: no_game_selected
                text: ""

<JoinPublicGame>:
    on_enter: (root.display_games())
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            Button:
                text: "Back"
                on_press: root.go_back()
            Label:
                id: games_public
                text: ""
        GridLayout:
            cols: 2
            Label:
                text: "Enter the name of the game you would like to join here:"
            TextInput:
                id: nameOfTheChosenPublic
            Button:
                text: "Continue to game"
                on_press: root.chosen_public(root.ids.nameOfTheChosenPublic.text)
            Label:
                id: no_game_selected
                text: ""
        
<WaitUntilHost>:
    GridLayout:
        cols: 1
        Button:
            on_press: root.leave_draft()
            text: "Leave Draft"
        Label:
            text: "Please wait until your host starts the game"
<ListOfPLayers>:
    GridLayout:
        cols: 1
        Label:
            id: noSuch
            text: ""
        Label:
            text: "Invite people by username"
        TextInput:
            id: InvitePeople
        Button:
            text: "Invite people"
            on_press: root.invite_people(root.ids.InvitePeople.text)
        Label:
            id: invitedPeopleState
            text: ""
        Button:
            text: "Start private game"
            on_press: root.start_private()
<ListOfPlayersPublic>:
    GridLayout:
        cols: 1
        Label:
            id: notEnufPpl
            text: ""
        Label:
            id: joinedPeopleState
            text: ""
        Button:
            text: "Start public game"
            on_press: root.start_public()
<DraftScreen>:
    on_enter: (root.show_NBA())
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            Label:
                text: "Welcome!"
        GridLayout:
            cols: 2
            Label:
                id: players
                text: ""
<LeaderboardScreen>:
    GridLayout:
        cols: 1
<ShareResults>:
    GridLayout:
        cols: 1
<RootWidget>:
    LoginScreen:
        name: "login_screen"
    SignUpScreen:
        name: "sign_up_screen"
    SignUpScreenSuccess:
        name: "sign_up_screen_success"
    LoginScreenSuccess:
        name: "login_screen_success"
    CreateNewGame:
        name: "create_new_game"
    ChoosePrivateGame:
        name: "choose_game_private"
    JoinPublicGame:
        name: "join_game_public"
    ListOfPLayers:
        name: "list_of_players"
    ListOfPlayersPublic:
        name:"list_of_players_public"
    DraftScreen:
        name: "draft_screen"
    LeaderboardScreen:
        name: "leaderboard_screen"
    ShareResults:
        name: "share_results"
    WaitUntilHost:
        name: "wait_until_host_starts_game"